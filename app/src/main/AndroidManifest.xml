<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chat.libertaria.world.connect_chat">

    <application
        android:allowBackup="false"
        android:name=".ChatApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".chat.local_profiles.LocalProfilesActivity"
            >

        </activity>
        <activity android:name=".chat.contact_list.ChatContactActivity"/>
        <activity android:name=".chat.welcome.MainActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".chat.WaitingChatActivity"/>
        <activity android:name=".chat.ChatActivity"/>
        <activity android:name=".chat.settings.ChangeProfile"/>


    </application>

</manifest>