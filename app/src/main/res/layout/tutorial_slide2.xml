<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="100dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textTutorial"
        android:text="@string/no_profile_message"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_open_app"
        android:background="@drawable/bg_border_grey"
        android:stateListAnimator="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textTutorial"
        android:text="@string/btn_open_app"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="or"
            android:textColor="@color/mainPurple"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@id/or"
            android:background="@color/mainPurple"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/or"
            android:background="@color/mainPurple"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textTutorial"
        android:text="@string/profile_message"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_grey"
        >

        <Spinner
            android:gravity="left"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:background="@drawable/bg_spinner"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:popupBackground="#ffffff"
            android:layout_height="wrap_content"
            android:prompt="@string/select_spinner"
            android:textColor="@color/textTutorial"/>

    </LinearLayout>


</LinearLayout>